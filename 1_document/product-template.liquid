{% if product.title == 'K-Pop Box' %}
<main class="main-content" role="main">
      <div class="wrapper">
        <!-- /templates/page.contact.liquid -->
<div class="grid">
  <div class="grid__item large--five-sixths push--large--one-twelfth">
    <header class="section-header text-center">
      <h1>Request Form</h1>
      <hr class="hr--small">
    </header>
    <div class="grid">
      <div class="grid__item large--four-fifths push--large--one-tenth">
        <div class="rte rte--nomargin rte--indented-images">
        </div>
        <div class="form-vertical">
		<!--  -->
			{% form 'contact' %}

			{% if form.posted_successfully? %}
            <p class="form-success">
              {{ 'contact.form.post_success' | t }}
            </p>
            {% else %}
          		{% if form.errors %}
                <script type="text/javascript">
                  
                  alert ("Invalid information!");
                </script>
                {% endif %}
          		
                
            {% endif %}
			{{ form.errors | default_errors }}
			

			<label for="ContactFormEmail" class="label--hidden">{{ 'contact.form.email' | t }}</label>
			<input type="email" id="ContactFormEmail" name="contact[email]" placeholder="{{ 'contact.form.email' | t }}" autocorrect="off" autocapitalize="off" value="{{ form.email }}">
			
			<label for="ContactFormMessage" class="label--hidden">{{ 'contact.form.message' | t }}</label>
			<textarea rows="10" id="ContactFormMessage" name="contact[body]" placeholder="{{ 'Your favorite K-Pop groups/K-Drama celebs'}}">{% if form.body %}{{ form.body }}{% endif %}</textarea>

			<input type="submit" class="btn" value="{{ 'contact.form.send' | t }}">
			{% endform %}
        </div>
      </div>
    </div>
</div></div></div></main>